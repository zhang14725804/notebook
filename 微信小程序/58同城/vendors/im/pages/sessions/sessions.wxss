@import "../../../../__wuBaseWxss__/20.wxss";

.friendEnter {
    height: 151rpx;
    display: flex;
    padding: 0 30rpx;
    align-items: center;
    justify-items: center;
    border-top: 1rpx solid #eee;
    border-bottom: 17rpx solid #F6F6F6;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAbBAMAAACHGhKRAAAAKlBMVEUAAAC4uLikpKSqqqqkpKSkpKSmpqakpKSjo6OkpKSqqqqkpKSmpqajo6Oa2LMjAAAADXRSTlMAC9cYwm9TuujPJKBFGS4vBgAAAEBJREFUCNdjYDzAAAGclwwgDI67yhAG212YUC5VhSZAGNx3b0EYsXcLwDTr3SsCUAFHigU4oAIM7NcFoD5cAKEAgTIoxr23ukkAAAAASUVORK5CYII=) no-repeat right 30rpx center;
    background-size: auto 27rpx;
}

.friend-icon {
    width: 82rpx;
    height: 71rpx;
    margin-right: 28rpx;
}

.friend-name {
    flex-grow: 1;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: 0;
}

.friend-count {
    font-size: 26rpx;
    color: #AAAAAA;
    padding-right: 34rpx;
    line-height: 22rpx;
}

.ss-item {
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #eee;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
    display: flex;
}

.ss-left {
    position: relative;
    margin-right: 20rpx;
}

.ss-left>.avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.ss-left>.unread {
    position: absolute;
    background: #F43531;
    color: #fff;
    font-size: 28rpx;
    border-radius: 16rpx;
    line-height: 32rpx;
    left: 80rpx;
    top: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    max-width: 64rpx;
    min-width: 32rpx;
}

.ss-right {
    height: 90rpx;
    flex-grow: 1;
    box-sizing: border-box;
    overflow: hidden;
    margin-top: 6rpx;
}

.ss-right>.top {
    display: flex;
    padding-left: 2rpx;
}

.ss-right .name {
    font-size: 32rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #333;
    flex-grow: 1;
    line-height: 32rpx;
    font-weight: bold;
    padding-right: 55rpx;
}

.ss-right .time {
    font-size: 22rpx;
    color: #999;
    width: auto;
    line-height: 22rpx;
    text-align: right;
    white-space: nowrap;
}

.ss-right>.lastmsg {
    font-size: 26rpx;
    width: 468rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #999;
    line-height: 26rpx;
    margin-top: 20rpx;
}

.ss-right .sending {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    background: transparent url("data:image/png;base64,") scroll no-repeat 50%;
    background-size: cover;
    margin-bottom: 0.6rpx;
    vertical-align: middle;
}

.ss-right .failed {
    width: 28rpx;
    height: 28rpx;
    display: inline-block;
    background: transparent url("data:image/png;base64,") scroll no-repeat 50%;
    background-size: cover;
    margin-bottom: 3rpx;
    vertical-align: middle;
}