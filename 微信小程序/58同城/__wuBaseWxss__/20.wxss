.im-loading {
    height: 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: #9b9b9b;
    line-height: 30rpx;
    padding-top: 20rpx;
}

.im-msglist-loading {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    z-index: 999;
    background: transparent;
}

.im-loading .icon {
    width: 36rpx;
    height: 30rpx;
    background: transparent url("data:image/gif;base64,") no-repeat scroll 50%;
    margin: 0 auto;
}

.im-msglist-loading .icon {
    margin-left: 50%;
}

.logout-container {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    padding: 10rpx;
    background: #fff;
    z-index: 1000;
    box-sizing: border-box;
    color: gray;
}

.logout-content {
    position: absolute;
    top: 50%;
    left: 50%;
    text-align: center;
    margin-left: -91px;
    margin-top: -120px;
}

.logout-img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
}

.logout-tip {
    margin-top: 20px;
}

.logout-btn {
    color: red;
    text-align: center;
    width: 150px;
    padding: 15px;
    border: 1px solid red;
    border-radius: 5px;
    margin-top: 20px;
}