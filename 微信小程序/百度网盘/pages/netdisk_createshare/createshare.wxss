.createshare-wrap {
    padding: 0 48rpx;
}

.createshare-wrap .title {
    color: #333;
    font-size: 58rpx;
    font-weight: bold;
    padding-top: 58rpx;
    box-sizing: border-box;
}

.createshare-wrap .dialog-input {
    position: relative;
    color: #333;
    font-size: 40rpx;
    height: 65rpx;
    margin-top: 82rpx;
    padding-right: 84rpx;
}

.createshare-wrap .dialog-input-placeholder {
    font-size: 40rpx;
    color: #999;
}

.createshare-wrap .input-subline {
    margin-top: 12rpx;
    width: 100%;
    height: 1rpx;
    background-color: #ebebeb;
}

.createshare-wrap .input-cancel {
    position: absolute;
    top: 0rpx;
    right: -24rpx;
    width: 84rpx;
    height: 65rpx;
    background: url('https://pan.baidu.com/h5-static/mini-program/images/ic_cancel.png') no-repeat 0 0;
    background-size: 36rpx;
    background-position: center;
}

.createshare-wrap .dialog-subtitle {
    margin-top: 28rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #d2d2d2;
}

.createshare-wrap .dialog-subtitle.error {
    color: #ff5455;
}

.createshare-wrap .create-confirm {
    margin-top: 68rpx;
    color: #fff;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    background-color: #3888FF;
}

.createshare-wrap .create-confirm::after {
    content: none;
}