.bd {
    padding: 0 30rpx;
}

.bd-text {
    margin-top: 80rpx;
    font-size: 30rpx;
    color: #777;
}

.bd-content {
    margin-top: 40rpx;
}

.bd-password::after {
    content: " ";
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    border: 1px solid rgba(0,0,0,0.2);
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 2px;
    border-top-width: 0;
}

.bd-username:after {
    content: " ";
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    border: 1px solid rgba(0,0,0,0.2);
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 2px;
}

.submit-btn {
    background: #3c76ff;
    border-radius: 2px;
    color: #90b6ff;
    font-size: 36rpx;
    margin-top: 50rpx;
}

label {
    height: 100%;
    width: 100rpx;
    display: block;
    margin-right: 20rpx;
}

.input-name,.input-pass {
    height: 100%;
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    flex: 1;
    flex-basis: 0;
}

.input-clearValue {
    width: 32rpx;
    height: 32rpx;
    background: url('https://wappass.baidu.com/static/wpsecurity/img/wechat/close.png') no-repeat center center;
    background-size: 32rpx 32rpx;
    display: none;
    position: absolute;
    right: 28rpx;
    top: 50%;
    margin-top: -16rpx;
}

.input-eye-open {
    background: url('https://wappass.baidu.com/static/wpsecurity/img/wechat/eye_open.png') no-repeat center center;
    background-size: 31rpx 24rpx;
}

.bd-content {
    padding: 0;
}