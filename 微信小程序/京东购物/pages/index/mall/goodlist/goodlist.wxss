@import "../../../../__wuBaseWxss__/20.wxss";

.goodlist {
    margin: 0 20rpx 20px;
    display: flex;
    flex-wrap: wrap;
}

.goodlist__item {
    width: 335rpx;
    height: 288rpx;
    position: relative;
    border-radius: 4rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.05);
    margin: 0 10rpx;
    overflow: hidden;
}

.goodlist-cover {
    width: 100%;
    height: 168rpx;
    display: flex;
    position: relative;
    justify-content: space-between;
}

.goodlist-cover__image {
    display: block;
    width: 168rpx;
    height: 168rpx;
}

.goodlist-cover__count {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 1;
    font-size: 20rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.7);
    border-radius: 20rpx 20rpx 0 20rpx;
    height: 28rpx;
    line-height: 28rpx;
    padding: 0 10rpx;
}

.goodlist-text {
    font-size: 24rpx;
    color: #999;
    margin: 20rpx 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}