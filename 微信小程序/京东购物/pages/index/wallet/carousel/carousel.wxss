.carousel {
    position: relative;
    height: 366rpx;
    overflow: hidden;
    background: #f7f7f7;
}

.carousel__swiper,.carousel__image {
    width: 100%;
    height: 100%;
}

.carousel__dots {
    position: absolute;
    left: 0;
    bottom: 10px;
    right: 0;
    height: 5px;
    text-align: center;
    font-size: 0;
}

.carousel__dot {
    display: inline-block;
    margin: 0 3px;
    width: 5px;
    height: 5px;
    border-radius: 3px;
    background: rgba(255,255,255,0.3);
    transition: all .2s;
}

.carousel__dot--cur {
    width: 10px;
    background: #fff;
    box-shadow: 0 2px 2px rgba(255,255,255,0.2);
}