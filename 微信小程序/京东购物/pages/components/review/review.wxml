<view class="xlist_group review" wx:if="{{review}}">
    <view bindtap="navigateTo" class="xlist_item flex_row header" data-type="0" data-url="/pages/item/subPackages/review/review">
        <text class="review_detail">评价 <text wx:if="{{review.total}}">好评 {{review.percent}}%</text>
        </text>
        <text class="flex_r" wx:if="{{review.total}}">共{{review.totalStr}}条评论 <text class="xlist_icon_arrow"></text>
        </text>
        <text class="flex_c tips" wx:else>暂无评价，欢迎您购买之后留下宝贵的评价</text>
    </view>
    <view class="review_entries" wx:if="{{review.total}}">
        <view bindtap="navigateTo" class="review_entries_item" data-type="{{index+1}}" data-url="/pages/item/subPackages/review/review" wx:for="{{review.entries}}">
            <text>{{item.name}}</text>
            <text>({{item.countStr}})</text>
        </view>
    </view>
    <view class="review_default" wx:if="{{review.detail.length==0&&review.total}}">{{review.entries[0].countStr}}个用户给了默认好评</view>
    <view bindtap="navigateTo" class="xlist_item review_item" data-sku="{{skuId}}" data-type="0" data-url="/pages/item/subPackages/review/review" wx:if="{{review.detail.length}}" wx:for="{{review.detail}}">
        <view class="user">
            <text class="name">{{item.nickname}}</text>
            <text class="level">（{{item.userLevelName}}）</text>
            <view class="star">
                <view class="num" style="width:{{item.score*20}}%"></view>
            </view>
            <text class="review_time">{{item.postTime}}</text>
        </view>
        <view class="content">
            <text class="line3">{{item.content}}</text>
            <view class="images review_image" wx:if="{{item.thumbs.length}}">
                <view class="image" wx:for="{{item.thumbs}}">
                    <image mode="aspectFill" src="{{item}}"></image>
                </view>
            </view>
        </view>
    </view>
    <view bindtap="navigateTo" class="total" data-sku="{{skuId}}" data-type="0" data-url="/pages/item/subPackages/review/review" wx:if="{{review.detail.length}}">
        查看全部评价
    </view>
</view>
