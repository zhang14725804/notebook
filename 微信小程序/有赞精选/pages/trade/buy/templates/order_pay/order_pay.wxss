.order-pay {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 49px;
    border-bottom: 0 none;
    z-index: 2;
}

.order-pay__container {
    overflow: hidden;
    height: 50px;
}

.order-pay__price {
    color: #f44;
}

.order-pay__btn {
    display: inline-block;
    width: 110px;
    height: 50px;
    line-height: 50px;
    margin-bottom: 0;
    margin-left: 10px;
    border-radius: 0;
}