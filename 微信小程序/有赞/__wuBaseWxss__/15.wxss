.goods-card {
    background: #fafafa;
    margin-top: 10px;
}

.goods-card__present-icon {
    position: absolute;
    left: 5px;
    top: 0;
    width: 18px;
    height: 36px;
    background: url("https://img.yzcdn.cn/public_files/2016/12/13/0fc4eacd96884829a5b6b517514807c8.png") no-repeat;
    background-size: 18px 36px;
    z-index: 1;
}

.goods-card--first {
    margin-top: 0px;
}

.goods-card__detail-sku {
    word-break: break-all;
    white-space: normal;
}