.order-address {
    display: block;
    position: relative;
    line-height: 1.4;
    padding: 15px 15px;
    padding-left: 40px;
    font-size: 14px;
    background-color: white;
}

.order-address--has {
    background: #fff url("https://img.yzcdn.cn/public_files/2016/11/21/8026eedb0062f84a729e5e4561d0bef2.png") 18px 16px no-repeat;
    background-size: 14px 16px;
}

.order-address--empty {
    padding: 16px 10px 16px 65px;
    height: 40px;
    background: white url("https://b.yzcdn.cn/v2/image/wap/address/add@2x.png") no-repeat;
    background-size: 40px 40px;
    background-position: 15px center;
}

.order-address--empty__title {
    line-height: 40px;
    font-size: 14px;
}

.order-address--edit {
    padding-right: 25px;
}

.order-address__desc {
    word-break: break-all;
}

.order-address__title {
    padding-bottom: 3px;
    overflow: hidden;
}

.order-address__uname {
    margin-right: 90px;
}

.order-address__border {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2px;
    background: #fff url("https://b.yzcdn.cn/v2/image/wap/address/border2@2x.png") repeat-x;
    background-size: 36px 2px;
}